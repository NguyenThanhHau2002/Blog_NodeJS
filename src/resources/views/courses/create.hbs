<div class="container mt-3">
    <h3 class="text-center">Đăng ký khóa học</h3>
    <div class="row justify-content-center">
        <div class="col-md-9">
            <form method="POST" action="/courses/store">
                <div class="form-group">
                    <label for="name">Tên khóa học</label>
                    <input type="text" class="form-control" id="name" name="name">
                </div>
                <div class="form-group">
                    <label for="description">Mô tả</label>
                    <input type="text" class="form-control" id="description" name="description">
                </div>
                <div class="form-group">
                    <label for="videoId">Video Id</label>
                    <input type="text" class="form-control" id="videoId" name="videoId">
                </div>
                <div class="form-group">
                    <label for="level">Trình độ</label>
                    <input type="text" class="form-control" id="level" name="level">
                </div>
                <button type="submit" class="btn btn-primary w-100">Thêm Khóa Học</button>
            </form>
        </div>
    </div>
</div>
